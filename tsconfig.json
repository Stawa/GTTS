{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["./lib/*"],
      "@speech/*": ["./lib/speech/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "test", "repo"],
  "typedocOptions": {
    "entryPoints": ["lib/*.ts"],
    "out": "docs"
  }
}
